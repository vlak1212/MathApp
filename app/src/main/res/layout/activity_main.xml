<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="15dp"
        android:layout_marginBottom="7dp"
        android:background="#e0e0e0"
        android:contentDescription="Image preview"
        android:elevation="4dp"
        android:scaleType="fitCenter" />

    <EditText
        android:id="@+id/editTextResult"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/imgBtn"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/edit_text_background"
        android:elevation="4dp"
        android:gravity="top|start"
        android:hint="Bài toán"
        android:imeOptions="flagNoEnterAction"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:minHeight="150dp"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp" />

    <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:id="@+id/historyButton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_margin="16dp"-->
<!--        android:layout_marginTop="307dp"-->
<!--        android:layout_marginEnd="245dp"-->
<!--        android:backgroundTint="@color/colorAccent"-->
<!--        android:contentDescription="oh hello"-->
<!--        android:src="@drawable/ic_history" />-->

    <LinearLayout
        android:id="@+id/btnSolve"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@id/editTextResult"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/solve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFA500"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Giải"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/solveWithAI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FF4C4C"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Giải bằng AI"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <EditText
        android:id="@+id/editResult"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/btnSolve"
        android:layout_marginTop="7dp"
        android:background="@drawable/edit_text_background"
        android:elevation="4dp"
        android:gravity="top|start"
        android:hint="Kết quả"
        android:imeOptions="flagNoEnterAction"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:minHeight="150dp"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/imgBtn"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCapture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#6200EE"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Chụp ảnh"
            android:textColor="#FFFFFF" />

<!--        <ImageButton-->
<!--            android:id="@+id/buttonCalculator"-->
<!--            android:layout_width="80dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@null"-->
<!--            android:contentDescription="Calculator"-->
<!--            android:elevation="8dp"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:src="@drawable/ic_calculator" />-->

        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#03DAC5"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Tải ảnh lên"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>
